<!doctype html>
<html class="no-js h-100" lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{{default.projectName}} - {{forgot.title}}</title>

    {{>partials/headAssets}}
</head>
<body class="layout-fixed">
    <div class="container-fluid">
        <div class="row">
            <main class="main-content forgot">
                <!-- tela de recuperação de login -->
                <div class="card">
                    <div class="card-body">
                        <!--  card header begin -->
                        <div class="text-center pb-3 col">
                            <h4 class="pb-2">Hagatus Wallet Manager</h4>
                            <h6 class="card-subtitle text-muted">Recuperar conta</h6>
                        </div>
                        <!--  card header end -->

                        <!--  card form begin -->
                        <form action="index.html" method="post">

                            <div class="mb-3">
                                <label for="forgot" class="form-label">Digite o usuário ou E-mail</label>
                                <input type="text" class="form-control" id="forgot">
                            </div>
                            <button class="btn btn-primary" type="submit">
                                Enviar
                            </button>
                        </form>
                    </div>
                </div>
                <!--  card form end -->
            </main>
        </div>
    </div>
</body>
</html>