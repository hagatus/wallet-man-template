<!doctype html>
<html class="no-js h-100" lang="pt">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{{default.projectName}} - {{wallet.title}}</title>

        {{>partials/headAssets}}
    </head>
    <body class="layout-fixed">
        <div class="container-fluid">
            <div class="row">
                {{>partials/sidebar}}
                {{>partials/mainNavbar}}
                <main class="main-content">
                    <div class="main-content-container">
                        {{#wallet}}
                            {{>partials/pageHeader}}
                        {{/wallet}}
                        {{>partials/wallet/walletOverview}}
                        <div class="row">
                            <div class="col-lg-6">
                                <!-- Carteira composição gráficos begin -->
                                <div class="card box" id="wallet-month-evolution">
                                    <div class="card-header border-bottom">
                                        <h6 class="m-0">
                                            <i class="fas fa-chart-line"></i>
                                            Carteira - Evolução Mensal
                                        </h6>
                                    </div>
                                    <div class="card-body d-flex">
                                        <canvas height="340" style="max-height: 300px !important;"
                                                id="wallet-month-evolution-graph" class=""></canvas>
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn btn-primary" href="#" role="button">Mais detalhes</a>
                                    </div>
                                </div>
                                <!-- Carteira composição gráficos end -->
                            </div>
                            <div class="col-lg-6">
                                <!-- Carteira evolução gráficos begin -->
                                <div class="card box" id="wallet-annual-evolution">
                                    <div class="card-header border-bottom">
                                        <h6 class="m-0">
                                            <i class="fas fa-chart-line"></i>
                                            Carteira - Evolução Anual
                                        </h6>
                                    </div>
                                    <div class="card-body d-flex">
                                        <div class="date-range">

                                        </div>
                                        <canvas height="340" style="max-height: 300px !important;"
                                                id="wallet-annual-evolution-graph" class=""></canvas>
                                    </div>
                                    <div class="card-footer">
                                        <a class="btn btn-primary" href="#" role="button">Mais detalhes</a>
                                    </div>
                                </div>
                                <!-- Carteira evolução gráficos end -->
                            </div>
                        </div>


                    </div>


                </main>
                {{>partials/footer}}
            </div>
        </div>
        <!-- last scripts -->
        <script type="text/javascript" src="js/wallet.1.0.0.js"></script>
        <!-- last scripts -->
        {{>partials/footerAssets}}
    </body>
</html>